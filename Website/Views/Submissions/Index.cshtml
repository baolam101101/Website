@model IEnumerable<Website.Models.Submission>

@{
    ViewBag.Title = "Submission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-sm-12">
        <h2>@ViewBag.Title</h2>
        <hr />

        @Html.ActionLink("Create Submission", "Create", null, new { @class = "btn btn-primary" })

        <br /><br />

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Closure_Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Final_Date)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Closure_Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Final_Date)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        @Html.ActionLink("Create Idea", "Create", "Posts", new { id = item.Id}, null)
                    </td>
                </tr>
            }
            <tbody>
        </table>
    </div>
</div>