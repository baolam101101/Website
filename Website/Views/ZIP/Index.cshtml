@using Website.Models
@model List<ZIPModel>
@{
    ViewBag.Title = "ZIP File";
}
</br>

<div class="row">
    <div class="col-sm-6">
        <h2>@ViewBag.Title</h2>
        <hr />
        @using (Html.BeginForm("Index", "ZIP", FormMethod.Post))
        {
            <table class="table table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>ZIP
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <tr>
                            <td>
                                @Model[i].ZIPName
                                @Html.HiddenFor(m => m[i].ZIPPath)
                                @Html.HiddenFor(m => m[i].ZIPName)
                            </td>
                            <td>@Html.CheckBoxFor(m => m[i].Selected)</td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <input type="submit" value="Download Selected" class="btn btn-primary" />
        }
    </div>
</div>



